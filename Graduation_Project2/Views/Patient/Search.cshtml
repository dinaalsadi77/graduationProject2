                                document.getElementById('spc-label').innerHTML = "Select a specialization :";
                                var selectedItem = document.getElementById('country').value;
                                var mySpcSelect = document.getElementById('spc');
                                mySpcSelect.innerHTML = "";
                                //  count = 0;


