                                spc.setAttribute("id", "mySelect");
                                spc.setAttribute("name", "mySelect");
                                spc.setAttribute("class", "form-control");

                                for (var i = 0; i < DR.length; i++) {
                                    //   document.getElementById('test').innerHTML = DR[0].MedicalCentreId;

                                    if (selectedItem == DR[i].MedicalCentreId) {

                                        var option = document.createElement("option");
                                        option.text = "" + DR[i].Specialization;
                                        option.value = DR[i].Specialization;
                                        spc.add(option);


                                        mySpcSelect.appendChild(spc);
                                        //        count++;
                                    }
                                }
