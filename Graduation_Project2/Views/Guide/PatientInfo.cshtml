@model Graduation_Project2.Models.Patient
@{
    ViewData["Title"] = "PatientInfo";
}
<!DOCTYPE HTML>
<html>
<head>
	<title>
		Profile
	</title>
	<link rel="stylesheet" href="~/css/Profile2.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
	<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css'>

	<script src="https://kit.fontawesome.com/f3d4095cbb.js" crossorigin="anonymous"></script>
</head>
<body>

	<div class="container">

		<div class="card">
			<span class="DescPart">
			<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.IdPhoto_File)
			</dt>
			<dd class="col-sm-10">
				<img src="@("~/image/"+Model.IDPhoto)" asp-append-version="true" width="250px" height="250px" />
			</dd>
				<p>
					<h1>@Model.FirstName  @Model.LastName</h1>
				</p>
				<div class="job">Age: @Model.Age</div>
				<div class="job"> Nationality: @Model.Nationality</div>
				<div class="job"><i class="fa-solid fa-venus-mars"></i> Gender: @Model.Gender</div>
				<div class="job"><i class="fa-solid fa-square-phone"></i> Phone: @Model.PhoneNumber</div>
				<div class="job"><i class="fa-solid fa-location-dot"></i> Address: @Model.Address</div>
			</span>

			<div class="data">
				<span> Medical Record :</span>
				<div class="record">
					@Model.MedicalRecord
				</div>
			</div>
			<a asp-controller="Guide" asp-action="GuideAppoinments"><button> Back</button></a>

		</div>
	</div>
</body>
</html>


