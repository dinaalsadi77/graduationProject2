@model IEnumerable<Graduation_Project2.Models.DoctorReq>

@{
    ViewData["Title"] = "RegistrationReq";
}

<h1>Doctor Requists</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<table class="table table-bordered">
    <thead style="background-color:dodgerblue">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model) {
    if (item.State == 0)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-outline-warning" asp-route-id="@item.DoctorReqId">Details</a> 

                        <form asp-action="Accept" method="post">
                            <input name="DoctorReqId" type="hidden" value="@item.DoctorReqId" />
                            <input type="submit" class="btn btn-outline-success" value="Accept" />
                        </form>

                        <form asp-action="Reject" method="post">
                            <input name="DoctorReqId" type="hidden" value="@item.DoctorReqId" />
                            <input type="submit" class="btn btn-outline-danger" value="Reject" />
                        </form>

            </td>
                </tr>
            }

          

        }
    </tbody>
</table>
