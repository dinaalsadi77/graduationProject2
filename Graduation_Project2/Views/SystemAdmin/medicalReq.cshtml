@model IEnumerable<Graduation_Project2.Models.RegistrationReq>

@{
    ViewData["Title"] = "medicalReq";
}

<h1>Medical Centers Requests</h1>


<table class="table table-bordered">
    <thead style="background:cornflowerblue">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicalCentreID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    if (item.State == 0)
    {   
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalCentreID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            
            <td>

                    <a asp-action="MED_REQ_Details" class="btn btn-outline-warning" asp-route-id="@item.RegistrationReqId">Details</a>

                    <form asp-action="MC_Accept" method="post">
                        <input name="RegistrationReqId" type="hidden" value="@item.RegistrationReqId" />
                        <input type="submit" class="btn btn-outline-success" value="Accept" />
                    </form>

                    <form asp-action="MC_Reject" method="post">
                        <input name="RegistrationReqId" type="hidden" value="@item.RegistrationReqId" />
                        <input type="submit" class="btn btn-outline-danger" value="Reject" />
                    </form>
            </td>
        </tr>
}
}
    </tbody>
</table>
